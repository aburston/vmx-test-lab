protocols {

    ldp {
{% for intf in core_interfaces %}
        interface {{ inf.int }}.0;
{% endfor %}
    } 

    mpls {
{% for intf in core_interfaces %}
        interface {{ inf.int }}.0;
{% endfor %}
    } 

    isis {

{% for intf in core_interfaces %}
        interface {{ intf.int }}.0 {
            point-to-point;
            level 1 disable;
            level 2 metric 2;
        }
{% endfor %}

        interface fxp0.0 {
            disable;
        }
        interface lo0.0 {
            passive;
        }
    }

    igmp-snooping {
        vlan default;
    }

}
